import socket
import random
import datetime

MAX_PACKET = 1024
QUEUE_LEN = 1
mode = None

my_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
my_socket.bind(('0.0.0.0', 1002))
my_socket.listen(QUEUE_LEN)

while True:
    try:
        client_socket, client_address = my_socket.accept()
        try:
            request = client_socket.recv(MAX_PACKET).decode().strip()

            if request == 'EXIT':
                client_socket.sendall("Cutting Contact".encode())
            elif request == 'NAME':
                client_socket.sendall("PARAKALO".encode())
            elif request == 'RAND':
                x = random.randint(1, 10)
                text = str(x)
                client_socket.sendall(text.encode())
            elif request == 'TIME':
                now = datetime.datetime.now()
                text = str(now)
                client_socket.sendall(text.encode())
            else:
                client_socket.sendall("Illegal action".encode())

        except socket.error as e:
            print(e)
        finally:
            client_socket.close()

    except socket.error as e:
        print(e)
